@model StudentEnrollmentDemoD9.Models.ViewModels.StudentEnrollmentsVM

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Student</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.Birthdate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.Birthdate)
        </dd>
    </dl>
</div>

<div>
    <h1> Enrolled Courses</h1>
    <table>
        <tbody>
            @foreach (var item in Model.Enrollments)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Course.CourseCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Course.Technology)
                    </td>

                    <td>
                     
                        <a asp-action="Details" asp-route-id="@item.Course.ID">Course Details</a> |
                        <a asp-action="Delete" asp-controller="Enrollments" asp-route-id="@item.Course.ID" asp-route-studentID="@item.Student.ID">Un-Enroll</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Student.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
